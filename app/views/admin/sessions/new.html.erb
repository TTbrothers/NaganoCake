<div class="container">
  <div class="col-3 text-center">
  <h3 class="bg-light">管理者ログイン</h3>
  </div>
  <div class="row">
    <div class="col-10">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <table class="table table-borderless">
      <tr>
        <th class="text-center align-middle"><%= f.label :メールアドレス %></th>
        <td colspan="2"><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "name@example.com" %></td>
        <td></td>
      </tr>
      <tr>
        <th class="text-center align-middle"><%= f.label :パスワード %></th>
        <td colspan="2"><%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "password" %></td>
        <td></td>
      </tr>
      <tr>
        <th></th>
        <td><%= f.submit "ログイン", class: "btn btn-primary btn-block" %></td>
      </tr>
    </table>
    <% end %>
    </div>
  </div>
</div>



<%= render "admin/shared/links" %>
