
<div class="container">
        <table class="col-10 table table-bordered">
      <tr>
        <th class="col-1 bg-light">会員ID</th>
        <th class="col-2 bg-light">氏名</th>
        <th class="col-1 bg-light">メールアドレス</th>
        <th class="col-2 bg-light">ステータス</th>
      </tr>
      <% @customers.each do |customer| %>
      <tr>
          <td>
                <%= customer.id %>
          </td>
          <td>
            <%= link_to customer.last_name + customer.first_name, admin_customer_path(customer), class: "customer_#{customer.id}" %>
          </td>
          <td>
                <%= customer.email %>
          </td>
          <td class="text-center">
                <%= customer.is_deleted %>
          </td>
      </tr>
      <% end %>

    </table>
</div>