<% provide(:title, "注文履歴詳細") %>
<h2 class="head-line title_h2 text-center">注文履歴詳細</h2>
 <div class="row">
  <div class="col-md-8" >
  	<table class="table table-borderless">
  		<tr>
  			<th>購入者</th>
  			<td><%= @order.name %></td>
  			<td></td>
  		</tr>
  		<tr>
  			<th>配送先</th>
  			<td>〒<%= @order.postal_code %><%= @order.address%> <br><%= @order.name %> </td>
  			<td></td>
  		</tr>
  		<tr>
  			<th>支払い方法</th>
  			<td><%= @order.payment_method %></td>
  			<td></td>
  		</tr>
  		<%= form_for(@order, url: admin_order_path, method: :patch) do |f| %>
  		<tr>
  			<th>注文ステータス</th>
  			<td><%= f.select :status, Order.statuses.keys, class: "order_status" %></td>
  			<td><%= f.submit '更新'  ,class: "btn btn-primary btn-block" %></td>
  		</tr>
  		<% end %>
  		<tr>
  			<th></th>
  			<td></td>
  			<td></td>
  		</tr>
  		<tr>
  			<th></th>
  			<td></td>
  			<td></td>
  		</tr>
  	</table>

   </div>

	 <div class="col-md-9">
		<table class="table table-hover table-bordered table-inverse">
	   <thead>
		  <tr class="info">
		   <th class="col-xs-4">商品名</th>
       <th>単価（税込）</th>
 	     <th>数量</th>
		   <th>小計</th>
		   <th>製作ステータス</th>
	    </tr>
		 </thead>
		 <tbody>
		 <% if flash[:notice] %>
			<div class="flash">
		   <%= flash[:notice] %>
			</div>
	   <% end %>
	   <% @order_details.each do |order_detail| %>
			<tr>
		   <td class="text-left">
		    <%= order_detail.item.name %>
			 </td>
		   <td class="text-right">
			  ¥<%= order_detail.tax.to_s(:delimited) %>
			 </td>
		   <td class="text-right">
		    <%= order_detail.amount %>
			 </td>
			 <td class="text-right">
			  ¥<%= order_detail.price.to_s(:delimited) %>
			 </td>
			  <%= form_for(order_detail, url: admin_order_detail_path(order_detail), method: :patch) do |f| %>
	       <td>
			 	  <%= f.select :status, OrderDetail.statuses.keys, class: "order_status" %>
			    <%= f.submit '更新'  ,class: "btn btn-warning" %>
         </td>
		    <% end %>
			</tr>
		 <% end %>
		 </tbody>
		</table>
	 </div>
   <div class="col-md-4  billing">
		<table class="table table-hover table-bordered table-condensed">
		 <tr>
     	<th class="info">商品合計</th>
			<td>¥<%= (@order.total_payment - @order.shipping_cost).to_s(:delimited) %></td>
		 </tr>
		 <tr>
			<th class="info">送料</th>
			<td>¥<%= @order.shipping_cost.to_s(:delimited) %></td>
		 </tr>
		 <tr>
			<th class="info">請求金額合計</th>
			<td>¥<%= @order.total_payment.to_s(:delimited) %></td>
		 </tr>
	  </table>
	  </div>
    <div class="col-xs-12">
     <%= link_to "戻る", admin_orders_path, class: "glyphicon glyphicon-home btn btn-info" %>
    </div>
	 </div>
  </div>
