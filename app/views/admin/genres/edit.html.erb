<div class="container">
  <div class="row">
    <div class="col-lg">
      <h4>ジャンル編集</h4>
      <%= form_with model:@genre, url:admin_genre_path, local:true do |f| %>
      <table class="table table-borderless">
        <tr>
          <th>ジャンル名</th>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit '変更を保存', class:"btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>
