<div class="container">
  <div class="row">
    <div class="col-lg">
      <h4>商品一覧</h4>
      <div class="text-lg-right m-3">
        <%= link_to new_admin_item_path do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
        </svg>
        <% end %>
      </div>
        <table class="table">
          <thead class="bg-light">
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <% @items.each do |item| %>
          <tbody>
            <tr>
              <td><%= item.id %></td>
              <td class="text-dark">
                <u>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
                </u>
              </td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <% if item.is_active == true %>
              <td><label class="text-success"><strong>販売中</strong></label></td>
              <% else %>
              <td><label class="text-secondary"><strong>販売停止中</strong></label></td>
              <% end %>
            </tr>
          </tbody>
          <% end %>
          <%= paginate @items %>
        </table>
    </div>
  </div>
</div>
