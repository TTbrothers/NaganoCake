
<div class="container">
  <div class="row">
    <div class="col-lg">
      <h4>商品一覧</h4>
      <div class="text-lg-right">
        <%= link_to '追加', new_admin_item_path %>
      </div>
        <table class="table">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <% @items.each do |item| %>
          <tbody>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td>
              <% if item.is_active == true %>
              <strong class="text-success">
              販売中
              </strong>
              <% else %>
               <strong class="text-secondary">
              販売停止中
               </strong>
              </td>
              <% end %>
            </tr>
          </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>
