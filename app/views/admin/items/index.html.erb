
<div class="container">
  <div class="row">
    <div class="col-lg">
      <label class="bg-light"><h4>商品一覧</h4></label>
      <div class="text-lg-right">
        <%= link_to '＋', new_admin_item_path, class:"btn btn-light btn-lg rounded-circle p-0" %>
      </div>
        <table class="table">
          <thead class="bg-light">
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <% @items.each do |item| %>
          <tbody>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item.id), class:"text-dark" do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <% if item.is_active = true %>
              <td><label class="text-success"><strong>販売中</strong></label></td>
              <% else %>
              <td><label class="text-secondary"><strong>販売停止中</strong></label></td>
              <% end %>
            </tr>
          </tbody>
          <% end %>
          <%= paginate @items %>
        </table>
    </div>
  </div>
</div>
