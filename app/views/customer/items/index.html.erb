<h1>商品一覧</h1>
<%= render 'customer/items/genre_sidebar', genres: @genres %>
<table>
  <tbody>
    <tr class="item-box">
      <%# @items.each do |item| %>
        <td class="item">
          <%#= link_to customer_item_path(item) do %>
            <%#= attachment_image_tag(item, :image, :fill, 150, 120, fallback:"no.image.jpg") %><br>
            <%#= item.name %><br>
            ￥<%#= item.price %>
          <%# end %>
        </td>
      <%# end %>
    </tr>
  </tbody>
</table>