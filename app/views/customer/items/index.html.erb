    <%= render 'customer/items/genre_sidebar', genres: @genres %>
    <div class="col-lg-8 offset-lg-1">
      <label class="bg-light"><h4>商品一覧</h4></label>
      <table class="table table-borderless">
        <tbody>
          <tr class="item-box">
            <% @items.each do |item| %>
              <td class="item">
                <%= link_to customer_item_path(item) do %>
                  <%= attachment_image_tag(item, :image, :fill, 150, 120, fallback:"no_image.jpg") %><br>
                  <%= item.name %><br>
                  ￥<%= item.price %>
                <% end %>
              </td>
            <% end %>
            <%= paginate @items %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>