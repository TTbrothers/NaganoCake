<div class="container">
  <div class="row">
    <label class="bg-light col-lg-4"><h4>ショッピングカート</h4></label>
    <div class="col-lg-3 offset-lg-4"><%= link_to 'カートを空にする', customer_cart_items_destroy_all_path, method: :delete, class:"btn btn-danger" %></div>
  </div>
  <table class="col-lg-10 table table-bordered my-lg-5">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @sum = 0 %>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.price %></td>
        <%= form_with model: cart_item, url: customer_cart_item_path(cart_item.id), method: :patch, local:true do |f| %>
        <td>
          <%= f.select :quantity, options_for_select(@numbers, {selected: cart_item.quantity.to_i} ) %>
          <%= f.submit '変更', class:"btn btn-success" %>
        </td>
        <% end %>
        <td><%= cart_item.item.price * cart_item.quantity %></td>
        <td><%= link_to '削除', customer_cart_item_path(cart_item.id), method: :delete, class:"btn btn-danger" %></td>
      </tr>
      <% @sum += cart_item.item.price * cart_item.quantity %>
      <% end %>
    </tbody>
  </table>
  <div class="row">
    <div class="col-lg-3"><%= link_to '買い物を続ける', customer_items_path, class:"btn btn-primary" %></div>
    <div class="col-lg-3 offset-lg-4">
      <table class="table table-berdered">
        <tr>
          <th>合計金額</th>
          <td><%= @sum %>円</td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-3 offset-lg-4"><%= link_to '情報を入力する', new_customer_order_path, class:"btn btn-success" %></div>
  </div>
</div>
