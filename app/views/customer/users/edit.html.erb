<div class='container'>
    <h2>会員情報編集</h2>
     <div class='row'>
       <div class="col-10">
    <%= form_with model: @user, url:customer_user_path(@user), local:true do |f| %>
    <table class="table  table-borderless">
      <tr>
        <th><%= f.label :"氏名" %></th>
        <td> <%= f.text_field :last_name, class: "form-control" %></td>
        <td> <%= f.text_field :first_name, autofocus: true, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= f.label :"フリガナ" %></th>
        <td><%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %></td>
        <td><%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %></td>
      </tr>
      <tr>
        <th><%= f.label :"メールアドレス" %></th>
        <td><%= f.text_field :email, autofocus: true, autocomplete: "email", class: "form-control" %></td>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label :"郵便番号" %></th>
        <td><%= f.text_field :postal_code, class: "form-control" %></td>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label :"住所" %></th>
        <td colspan="2"><%= f.text_field :address, class: "form-control" %></td>
        <td></td>
      </tr>
      <tr>
        <th><%= f.label :"電話番号" %></th>
        <td><%= f.text_field :telephone_number, class: "form-control" %></td>
        <td></td>
      </tr>
      <tr>
        <th></th>
        <td><%= f.submit "編集内容を保存", class: "form-control" %></td>
        <td><%= link_to '退会する', customer_users_confirm_path, class: "btn btn-danger btn-block"%></td>
      </tr>
      <tr>
        <th></th>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th></th>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <th></th>
        <td></td>
        <td></td>
      </tr>

    </table>
    <% end %>
    </div>
    </div>

  </div>
