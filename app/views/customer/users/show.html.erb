<div class="container px-5 ">
  <div class="row m-3">
    <!--<div class="col-3">-->
      <h2 class="col-3 d-flex align-items-center">登録情報</h2>
    <!--</div>-->
      <div class="col-4 d-flex align-items-center">
        <%= link_to '編集する', edit_customer_user_path,class: "btn btn-success m-3 " %>
      </div>
    </div>

    <table class="col-10 table table-bordered">
      <tr>
        <th class="col-2"style="background-color: #b0c4de;">氏名</th>
          <td>
            <%= @user.last_name + @user.first_name %>
          </td>
      </tr>
      <tr>
        <th class="col-2"style="background-color: #b0c4de;">カナ</th>
        <td>
          <%= @user.last_name_kana + @user.first_name_kana %>
        </td>
      </tr>
      <tr>
        <th class="col-2"style="background-color: #b0c4de;">郵便番号</th>
        <td>
          <%= @user.postal_code %>
        </td>
      </tr>
      <tr>
        <th class="col-2"style="background-color: #b0c4de;">住所</th>
        <td>
          <%= @user.address %>
        </td>
      </tr>
      <tr>
        <th class="col-2"style="background-color: #b0c4de;">電話番号</th>
        <td>
          <%= @user.telephone_number %>
        </td>
      </tr>
      <tr>
        <th class="col-2"style="background-color: #b0c4de;">メールアドレス</th>
        <td>
          <%= @user.email %>
        </td>
        </tr>
    </table>
    <div class="row m-3">
    <!--<div class='col-sm-3'>-->
      <h2 class="col-3 d-flex align-items-center">配送先</h2>
    <!--</div>-->
    <div class="col-4 d-flex align-items-center">
      <%= link_to '一覧を見る', customer_addresses_path,class: "btn btn-primary m-3 " %>
    </div>
    </div>
    <div class="row m-3">
    <!--<div class="col-3">-->
      <h2 class="col-3 d-flex align-items-center">注文履歴</h2>
    <!--</div>-->
    <div class="col-4 d-flex align-items-center">
      <%= link_to '一覧を見る', customer_orders_path,class: "btn btn-primary m-3 " %>
    </div>
    </div>

</div>