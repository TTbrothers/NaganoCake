<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-3'>
      <h2>登録情報</h2>
    </div>
    <div class='col-1'>
      <%= link_to '編集する', edit_customer_user_path %>
    </div>

    <table class="col-10 table table-bordered">
      <tr>
        <th class="col-2 bg-light">氏名</th>
          <td>
            <%= @user.last_name + @user.first_name %>
          </td>
      </tr>
      <tr>
        <th class="col-2 bg-light">カナ</th>
        <td>
          <%= @user.last_name_kana + @user.first_name_kana %>
        </td>
      </tr>
      <tr>
        <th class="col-2 bg-light">郵便番号</th>
        <td>
          <%= @user.postal_code %>
        </td>
      </tr>
      <tr>
        <th class="col-2 bg-light">住所</th>
        <td>
          <%= @user.address %>
        </td>
      </tr>
      <tr>
        <th class="col-2 bg-light">電話番号</th>
        <td>
          <%= @user.telephone_number %>
        </td>
      </tr>
      <tr>
        <th class="col-2 bg-light">メールアドレス</th>
        <td>
          <%= @user.email %>
        </td>
        </tr>
    </table>
    <div class='col-3'>
      <h2>配送先</h2>
    </div>
    <div class="col-2">
      <%= link_to '一覧を見る', customer_addresses_path %>
    </div>
    <div class="col-3">
      <h2>注文履歴</h2>
    </div>
    <div class="col-2">
      <%= link_to '一覧を見る', customer_orders_path %>
    </div>

  </div>
</div>