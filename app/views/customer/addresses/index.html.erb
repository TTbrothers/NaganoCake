
<div class="container">
    <div class="row">
        <div class="col text-center">
        <% if flash[:notice] %>
            <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

        </div>
    </div>
    <div class="row">
        <h4 class="col-sm-3">配送先一覧/登録</h4>
    </div>
    <%= form_with model: @address, url: customer_addresses_path, local: true do |f| %>
    <table class="table table-borderless">
        <tr>
            <th><%= f.label :"郵便番号(ハイフンなし)" %></th>
            <td><%= f.text_field :postcode, :placeholder => "0000000" %></td>
            <td></td>
        </tr>
        <tr>
            <th><%= f.label :"住所" %></th>
            <td><%= f.text_field :address, :placeholder => "東京都渋谷区代々木神園町0-0", class: "form-control" %></td>
            <td></td>
        </tr>
        <tr>
            <th><%= f.label :"宛名" %></th>
            <td><%= f.text_field :name, :placeholder => "令和道子" %></td>
            <td><%= f.submit "新規登録", class: "form-control",class: "btn btn-success btn-block" %></td>
        </tr>
    </table>
    <% end %>
        <table class="table table-bordered">
      <tr>
        <th class="col-1"style="background-color: #b0c4de;">郵便番号</th>
        <th class="col-2"style="background-color: #b0c4de;">住所</th>
        <th class="col-1"style="background-color: #b0c4de;">宛名</th>
        <th class="col-2"style="background-color: #b0c4de;"></th>
      </tr>
      <% @addresses.each do |address| %>
      <tr>
          <td>
                <%= address.postcode %>
          </td>
          <td>
                <%= address.address %>
          </td>
          <td>
                <%= address.name %>
          </td>
          <td class="text-center btn-group btn-block">
                <%= link_to "編集", edit_customer_address_path(address.id),class: "btn btn-success " %>
                <%= link_to "削除", customer_address_path(address), method: :delete, data: { confirm: "【確認】配送先を削除してもよろしいですか？" }, class: "btn btn-danger " %>
          </td>
      </tr>
      <% end %>

    </table>







</div>