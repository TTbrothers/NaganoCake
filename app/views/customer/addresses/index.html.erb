<div class="container">
    <div class="row">
        <h4 class="col-sm-3">配送先一覧/登録</h4>
    </div>
    <%= form_with model: @address, url: customer_addresses_path, local: true do |f| %>
    <div class="row">
        <div class="col-sm-3">
          郵便番号(ハイフンなし)
        </div>
        <div class="col-sm-3">
            <%= f.text_field :postcode, :placeholder => "0000000" %>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            住所
        </div>
        <div class="col-sm-5">
            <%= f.text_field :address, :size=>"60", :placeholder => "東京都渋谷区代々木神園町0-0" %>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-3">
            宛名
        </div>
        <div class="col-sm-3">
             <%= f.text_field :name, :placeholder => "令和道子" %>
        </div>
        <div class="col-sm-offset-3 col-sm-3">
            <%= f.submit "新規登録" %>
        </div>
    </div>
    <% end %>


        <table class="col-10 table table-bordered">
      <tr>
        <th class="col-1 bg-light">郵便番号</th>
        <th class="col-2 bg-light">住所</th>
        <th class="col-1 bg-light">宛名</th>
        <th class="col-2 bg-light"></th>
      </tr>
      <% @addresses.each do |address| %>
      <tr>
          <td>
                <%= address.postcode %>
          </td>
          <td>
                <%= address.address %>
          </td>
          <td>
                <%= address.name %>
          </td>
          <td>
                <%= link_to "編集", edit_customer_address_path(address.id) %>
                <%= link_to "削除", customer_address_path(address), method: :delete %>

          </td>
      </tr>
      <% end %>

    </table>







</div>